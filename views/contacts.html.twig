    <body>

        <div class="wrapper">

            <header class="page-header">

                <h1>Address Book</h1>    

            </header>


            <section class="">

                 
                {% if contacts is not empty %}
                    
                    <p>All of your current contacts</p>
                    <ul>
                        {% for contact in contacts %}
                            <li>{{ contact.getName }} <br /> {{ contact.getPhone }} <br /> {{ contact.getAddress }} /></li>
                        {% endfor %}
                    </ul>

                {% endif %}

                <form action='/contacts' method='post'>
                    
                    <label for='name'>Add contact's name:</label>
                    <input id='name' name='name' type='text' value='exp: Bruce Wayne'>

                    <label for='phone'>Add contact's phone number:</label>
                    <input id='phone' name='phone' type='tel' value='exp: 555 555 5555'>

                    <label for='address'>Add contact's address:</label>
                    <input id='address' name='address' type='address' value='exp: 1007 Mountain Drive, Gotham City, IL 60035'>

                    <button type='submit'>Add this contact!</button>
                
                </form>

                <form action='/delete_places' method='post'>
                    <button type='submit'>Delete your list of contacts!</button>
                </form>

            </section>    

        </div> <!-- end of wrapper -->

        <footer class="" >

            <div class="">
        	  
                

            </div>

        </footer>

        
    </body>
	</html>